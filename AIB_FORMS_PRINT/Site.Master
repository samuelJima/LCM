  <script src="../../crystalreportviewers13/js/crviewer/crv.js"></script>
    <script type="text/javascript">

          function changeControls() {
              var e = document.getElementById("combbankType");
              var strUser = e.options[e.selectedIndex].value;
              if (strUser == "0") {
                  var row = document.getElementById("op1")
                  row.style = 'visibility:hidden';
                  var row1 = document.getElementById("op2")
                  row1.style = 'visibility:hidden';
              }
              else {

                  var row2 = document.getElementById("rm1")
                  row2.style = 'visibility:hidden';

                  var row3 = document.getElementById("rm2")
                  row3.style = 'visibility:hidden';
              }
          }

          function SetTarget() {

              document.forms[0].target = "_blank";

          }
    </script>
</head>
<body style="background-color: #00b1ff; background-repeat:no-repeat;background-size:cover; background-image:url('../Images/logoNew.png')" >
